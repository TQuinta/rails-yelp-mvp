<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %> - Score: <%= review.rating %></p>
<% end %>
<p><%= link_to "leave review here", new_restaurant_review_path(@restaurant) %>
</p>
<p><%= link_to "Edit this restuarant", edit_restaurant_path(@restaurant) %></p>

<p><%= link_to "Go back to all restaurants", restaurants_path %></p>
